                    <!-- Background music controls -->
                    <div class="audio-control-item">
                        <div class="d-flex align-items-center mb-1">
                            <button class="btn btn-sm btn-outline-secondary me-2" id="bgMusicToggle">
                                <i class="fas fa-play" id="bgMusicIcon"></i>
                            </button>
